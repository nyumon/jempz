<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context="com.nyumon.jempol.EditKataSandi"
    android:background="@color/windowBackgroundSecondary">

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/MyMaterialTheme.AppBarOverlay">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            app:layout_scrollFlags="scroll|exitUntilCollapsed"
            app:popupTheme="@style/ThemeOverlay.AppCompat.Light" />
    </android.support.design.widget.AppBarLayout>
    <LinearLayout
        android:paddingLeft="20sp"
        android:paddingRight="20sp"
        android:layout_marginTop="?attr/actionBarSize"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <EditText
            android:id="@+id/sandisekarang"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Kata sandi saat ini"
            android:padding="15sp"
            android:inputType="textPassword"
            android:drawablePadding="10sp"
            android:drawableLeft="@drawable/lock"
            android:layout_marginTop="20sp"
            android:background="@color/windowBackground"
            android:textColor="@color/textColorPrimary"
            android:textColorHint="@color/textColorSecondary"
            android:textAppearance="@style/NormalText"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1sp"
            android:background="@color/windowBackgroundSecondary"/>
        <EditText
            android:id="@+id/sandibaru"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Kata sandi baru"
            android:padding="15sp"
            android:drawablePadding="10sp"

            android:inputType="textPassword"
            android:drawableLeft="@drawable/lock"
            android:layout_marginTop="10sp"
            android:background="@color/windowBackground"
            android:textColor="@color/textColorPrimary"
            android:textColorHint="@color/textColorSecondary"
            android:textAppearance="@style/NormalText"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1sp"
            android:background="@color/windowBackgroundSecondary"/>
        <EditText
            android:id="@+id/ulangsandibaru"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Kata sandi baru sekali lagi"
            android:padding="15sp"

            android:inputType="textPassword"
            android:drawablePadding="10sp"
            android:drawableLeft="@drawable/lock"
            android:layout_marginTop="10sp"
            android:background="@color/windowBackground"
            android:textColor="@color/textColorPrimary"
            android:textColorHint="@color/textColorSecondary"
            android:textAppearance="@style/NormalText"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1sp"
            android:background="@color/windowBackgroundSecondary"/>
        <Button
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textAppearance="@style/NormalText"
            android:text="Ubah Kata Sandi"
            android:layout_marginTop="10sp"
            android:textAllCaps="false"
            android:id="@+id/ubah_kata_sandi"
            android:background="@drawable/button_subscribe_1"
            android:textColor="@color/colorSecondary" />

    </LinearLayout>



</android.support.design.widget.CoordinatorLayout>
