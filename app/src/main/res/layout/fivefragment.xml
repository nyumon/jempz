<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.nyumon.jempol.MainActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <TextView
                android:id="@+id/aturan"
                android:layout_marginLeft="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="PENGATURAN"
                android:textStyle="bold"
                android:paddingTop="10sp"
                android:paddingBottom="10sp"
                android:textSize="15sp"/>
            <View
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:layout_width="wrap_content"
                android:layout_height="2dp"
                android:background="@color/title_row">
            </View>
            <TextView
                android:id="@+id/pemberitahuan"
                android:layout_marginLeft="5dp"
                android:textColor="#727272"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="Pemberitahuan"
                android:textSize="15sp"
                android:paddingTop="10sp"
                android:paddingBottom="10sp"
                android:onClick="setPemberitahuan"/>
            <View
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:layout_width="wrap_content"
                android:layout_height="1dp"
                android:background="@color/subtitle_row">
            </View>
            <TextView
                android:id="@+id/test"
                android:textColor="#727272"
                android:layout_marginLeft="5dp"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="Akun"
                android:paddingTop="10sp"
                android:paddingBottom="10sp"
                android:textSize="15sp"
                android:onClick="setPrivasi"/>
            <View
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:layout_width="wrap_content"
                android:layout_height="1dp"
                android:background="@color/subtitle_row">
            </View>

            <TextView
                android:id="@+id/logout"
                android:textColor="#727272"
                android:layout_marginLeft="5dp"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="Log Out"
                android:paddingTop="10sp"
                android:paddingBottom="10sp"
                android:textSize="15sp"
                android:onClick="Logout"/>
            <View
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:layout_width="wrap_content"
                android:layout_height="1dp"
                android:background="@color/subtitle_row">
            </View>
        </LinearLayout>

    </ScrollView>

</RelativeLayout>