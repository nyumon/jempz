<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="60sp"
    tools:context="com.nyumon.jempol.MainActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:id="@+id/scroll1">

            <ImageView
                android:layout_width="fill_parent"
                android:layout_height="200sp"
                android:src="@color/subtitle_row"/>
            <ImageView
                android:layout_width="80sp"
                android:id="@+id/FotoProfil"
                android:layout_height="80sp"
                android:layout_gravity="center"
                android:layout_marginTop="-50sp"
                android:src="@color/colorAccent"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20sp"
                android:id="@+id/nama"
                android:text="Chibi Marukocan"
                android:textSize="25sp"
                android:gravity="center"/>
            <TableLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <!-- Row 3 with 2 columns -->
                <TableRow
                    android:layout_height="wrap_content"
                    android:layout_width="fill_parent"
                    android:gravity="center_horizontal"
                    android:layout_weight="1">
                    <TextView
                        android:id="@+id/berlangganan"
                        android:text="2012 Berlangganan"
                        android:layout_weight="1"
                        android:textColor="#000000"
                        android:padding="18dip"
                        android:layout_marginLeft="40sp"
                        android:gravity="center"/>

                    <TextView
                        android:id="@+id/TextView04"
                        android:text="2013 Dilanggani"
                        android:layout_weight="1"
                        android:textColor="#000000"
                        android:layout_marginRight="50sp"
                        android:padding=  "18dip"
                        android:gravity="center"/>
                </TableRow>
            </TableLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:gravity="center"
                android:layout_height="wrap_content">

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/btnberlangganan"
                    android:layout_centerInParent="true"
                    android:text="Berlangganan"
                    android:background="@color/colorAccent"
                    android:padding="15sp"
                    android:textColor="@color/colorSecondary"/>



            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <GridView
                    android:id="@+id/grid_view"
                    android:layout_width="match_parent"
                    android:layout_height="fill_parent"
                    android:minHeight="1200sp"
                    android:gravity="center"
                    android:columnWidth="200sp"
                    android:numColumns="3"
                    android:horizontalSpacing="30dp"
                    android:verticalSpacing="30dp"
                    android:paddingTop="30dp"
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp"
                    android:clipToPadding="false"
                    android:stretchMode="columnWidth"
                    />

            </LinearLayout>


        </LinearLayout>




    </ScrollView>
</LinearLayout>
