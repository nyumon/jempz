<LinearLayout android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/windowBackgroundSecondary"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        tools:context="com.nyumon.jempol.MainActivity"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@color/colorPrimary">


                <ImageView
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:layout_gravity="center"
                    android:background="@drawable/circle"
                    android:layout_marginTop="10sp"
                    android:id="@+id/FotoProfil"
                    android:layout_centerHorizontal="true"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10sp"
                android:id="@+id/nama"
                android:text="Chibi Marukocan Marukocan"
                android:textSize="20sp"
                android:textColor="@color/windowBackground"
                android:gravity="center"/>
            <TableLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <!-- Row 3 with 2 columns -->
                <TableRow
                    android:layout_height="wrap_content"
                    android:layout_width="fill_parent"
                    android:gravity="center_horizontal"
                    android:layout_weight="1">
                    <TextView
                        android:id="@+id/berlangganan"
                        android:text="2012 Berlangganan"
                        android:layout_weight="1"
                        android:textColor="@color/colorSecondary"
                        android:padding="18dip"
                        android:layout_marginLeft="40sp"
                        android:gravity="center"/>

                    <TextView
                        android:id="@+id/TextView04"
                        android:text="2013 Langganan"
                        android:layout_weight="1"
                        android:textColor="@color/colorSecondary"
                        android:layout_marginRight="50sp"
                        android:padding=  "18dip"
                        android:gravity="center"/>
                </TableRow>
            </TableLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:gravity="center"
                android:layout_height="wrap_content">

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/btnberlangganan"
                    android:layout_centerInParent="true"
                    android:text="Berlangganan"
                    android:background="@color/colorAccent"
                    android:padding="15sp"
                    android:textColor="@color/colorSecondary"
                    android:layout_marginBottom="10sp"/>

            </LinearLayout>


        </LinearLayout>


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10sp"
                android:text="Laporan Saya"
                android:padding="10sp"
                android:textSize="15sp"
                android:gravity="center"/>
            <View
                android:layout_width="wrap_content"
                android:layout_height="2dp"
                android:background="@color/title_row">
            </View>
              <com.nyumon.jempol.ExpandedGridView
                android:layout_marginTop="20dp"
                android:id="@+id/grid_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:columnWidth="90dp"
                android:layout_weight="1"
                android:numColumns="auto_fit"
                android:verticalSpacing="10dp"
                android:horizontalSpacing="10dp"
                android:stretchMode="columnWidth"
                android:gravity="center"
                ></com.nyumon.jempol.ExpandedGridView>
        </LinearLayout>


    </ScrollView>
</LinearLayout>